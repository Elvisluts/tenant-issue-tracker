@page
@model TenantIssueTracker.Pages.Tenant.SubmitFeedbackModel
@using System.Security.Claims

@{
    ViewData["Title"] = "Submit Feedback";
    Layout = "_Layout";
}

<div class="container">
    <h2>Submit Feedback</h2>
    <hr />

    <form method="post">
        <input type="hidden" asp-for="Feedback.TenantId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />

        <div class="form-group">
            <label asp-for="Feedback.IssueId" class="control-label">Issue ID</label>
            <input asp-for="Feedback.IssueId" class="form-control" readonly />
            <span asp-validation-for="Feedback.IssueId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Feedback.Rating" class="control-label">Rating (1-5)</label>
            <input asp-for="Feedback.Rating" class="form-control" type="number" min="1" max="5" />
            <span asp-validation-for="Feedback.Rating" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Feedback.Comment" class="control-label">Comment</label>
            <textarea asp-for="Feedback.Comment" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Feedback.Comment" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit Feedback</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}