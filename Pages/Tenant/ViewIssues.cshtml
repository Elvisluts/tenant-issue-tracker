@page
@model TenantIssueTracker.Pages.Tenant.ViewIssuesModel
@{
    ViewData["Title"] = "View My Issues";
    Layout = "_Layout";
}

<h1>View My Issues</h1>

<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Category</th>
            <th>Reported Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var issue in Model.Issues)
{
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@issue.Title</h5>
            <p class="card-text">@issue.Description</p>
            <p class="card-text"><small class="text-muted">Status: @(issue.IsResolved ? "Resolved" : "Pending")</small></p>

            @if (issue.IsResolved)
            {
                <a asp-page="/Tenant/SubmitFeedback" asp-route-issueId="@issue.Id" class="btn btn-primary">Submit Feedback</a>
            }
        </div>
    </div>
}
    </tbody>
</table>