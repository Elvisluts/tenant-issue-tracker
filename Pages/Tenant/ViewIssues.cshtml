@page
@model TenantIssueTracker.Pages.Tenant.ViewIssuesModel
@{
    ViewData["Title"] = "View My Issues";
    Layout = "_Layout";
}

<h1>View My Issues</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Category</th>
            <th>Reported Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var issue in Model.Issues)
        {
            <tr>
                <td>@issue.Title</td>
                <td>@issue.Description</td>
                <td>@issue.Category</td>
                <td>@issue.ReportedDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(issue.IsResolved ? "Resolved" : "Pending")</td>
                <td>
                    @if (issue.IsResolved)
                    {
                        <a asp-page="/Tenant/SubmitFeedback" asp-route-issueId="@issue.Id" class="btn btn-primary">Submit Feedback</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>