@page
@model TenantIssueTracker.Pages.Tenant.SubmitIssueModel
@{
    ViewData["Title"] = "Submit Issue";
    Layout = "_Layout";
}

<h2>Submit Issue</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="IssueInput.Title" class="control-label">Title</label>
        <input asp-for="IssueInput.Title" class="form-control"/>
        <span asp-validation-for="IssueInput.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IssueInput.Description" class="control-label">Description</label>
        <textarea asp-for="IssueInput.Description" class="form-control"></textarea>
        <span asp-validation-for="IssueInput.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IssueInput.Category" class="control-label">Category</label>
        <select asp-for="IssueInput.Category" class="form-control">
            <option value="Electricity">Electricity</option>
            <option value="Water">Water</option>
            <option value="Trash">Trash</option>
            <option value="General">General</option>
        </select>
        <span asp-validation-for="IssueInput.Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit Issue</button>
    </div>
</form>