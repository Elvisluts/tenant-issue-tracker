@model TenantIssueTracker.Models.Feedback

@{
    ViewData["Title"] = "Submit Feedback";
}

<h2>Submit Feedback</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="TenantName" class="control-label"></label>
        <input asp-for="TenantName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="ApartmentNumber" class="control-label"></label>
        <input asp-for="ApartmentNumber" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit Feedback" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" asp-controller="Issues">Back to Issues</a>
</div>