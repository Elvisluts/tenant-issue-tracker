@using TenantIssueTracker.Models
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Caretakers";
}

<div class="container">
    <h2>Caretakers</h2>
    
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Caretaker</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>