@page
@model TenantIssueTracker.Pages.Caretaker.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<div class="container">
    <h2>Caretaker Dashboard</h2>

    <!-- Dashboard Statistics -->
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Issues</h5>
                    <p class="card-text">@Model.DashboardData.TotalIssues</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Resolved Issues</h5>
                    <p class="card-text">@Model.DashboardData.ResolvedIssues</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-info mb-3">
                <div class="card-body">
                    <h5 class="card-title">Feedbacks</h5>
                    <p class="card-text">@Model.DashboardData.FeedbackCount</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Issues Section -->
    <div class="row mt-4">
        <div class="col">
            <h3>Active Issues</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Reported By</th>
                        <th>Reported Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var issue in Model.ActiveIssues)
                    {
                        <tr>
                            <td>@issue.Title</td>
                            <td>@issue.Description</td>
                            <td>@issue.ApplicationUser?.UserName</td>
                            <td>@issue.ReportedDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a asp-page="/Caretaker/ManageIssue" asp-route-id="@issue.Id" class="btn btn-primary btn-sm">Manage</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Navigation Links -->
    <div class="row mt-4">
        <div class="col-md-6">
            <a asp-page="/Caretaker/ManageIssues" class="btn btn-primary btn-block">Manage All Issues</a>
        </div>
        <div class="col-md-6">
            <a asp-page="/Caretaker/ViewFeedback" class="btn btn-secondary btn-block">View Feedback</a>
        </div>
    </div>
</div>