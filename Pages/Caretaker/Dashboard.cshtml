@page
@model TenantIssueTracker.Pages.Caretaker.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<div class="container">
    <h2>Caretaker Dashboard</h2>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Issues</h5>
                    <p class="card-text">@Model.DashboardData.TotalIssues</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Resolved Issues</h5>
                    <p class="card-text">@Model.DashboardData.ResolvedIssues</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-info mb-3">
                <div class="card-body">
                    <h5 class="card-title">Feedbacks</h5>
                    <p class="card-text">@Model.DashboardData.FeedbackCount</p>
                </div>
            </div>
        </div>
    </div>

 
    <!-- Navigation Links -->
    <div class="row mt-4">
        <div class="col-md-6">
            <a asp-page="/Caretaker/ManageIssues" class="btn btn-primary btn-block">Manage All Issues</a>
        </div>
        <div class="col-md-6">
            <a asp-page="/Caretaker/ViewFeedback" class="btn btn-secondary btn-block">View Feedback</a>
        </div>
    </div>
</div>