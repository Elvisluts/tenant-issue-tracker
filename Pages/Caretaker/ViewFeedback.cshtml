@page
@model TenantIssueTracker.Pages.Caretaker.ViewFeedbackModel
@{
    ViewData["Title"] = "View Feedback";
    Layout = "_Layout";
}

<table class="table">
    <thead>
        <tr>
            <th>Tenant Name</th>
            <th>Apartment Number</th>
            <th>Content</th>
            <th>Submitted On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var feedback in Model.Feedbacks)
        {
            <tr>
                <td>@feedback.Tenant.FirstName @feedback.Tenant.LastName</td> <!-- Use Tenant navigation property -->
                <td>@feedback.Tenant.ApartmentNumber</td> <!-- Use Tenant navigation property -->
                <td>@feedback.Comment</td> <!-- Use Comment property -->
                <td>@feedback.SubmittedOn</td>
            </tr>
        }
    </tbody>
</table>