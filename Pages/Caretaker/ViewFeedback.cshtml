@page
@model TenantIssueTracker.Pages.Caretaker.ViewFeedbackModel
@{
    ViewData["Title"] = "View Feedback";
    Layout = "_Layout";
}

<table class="table">
    <thead>
        <tr>
            <th>Tenant Name</th>
            <th>Apartment Number</th>
            <th>Content</th>
            <th>Submitted On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var feedback in Model.Feedbacks)
        {
            <tr>
                <td>@(feedback.Tenant != null ? $"{feedback.Tenant.FirstName} {feedback.Tenant.LastName}" : "Unknown Tenant")</td>
                <td>@(feedback.Tenant?.ApartmentNumber ?? "N/A")</td>
                <td>@feedback.Comment</td>
                <td>@feedback.SubmittedOn.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>