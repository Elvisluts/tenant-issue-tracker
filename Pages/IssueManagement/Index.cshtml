@page
@model TenantIssueTracker.Pages.IssueManagement.IndexModel
@{
    ViewData["Title"] = "Issues";
}

<div class="container">
    <h2>Issues</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Tenant Name</th>
                <th>Apartment Number</th>
                <th>Description</th>
                <th>Category</th>
                <th>Reported Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var issue in Model.Issues)
            {
                <tr>
                    <td>@issue.TenantName</td>
                    <td>@issue.ApartmentNumber</td>
                    <td>@issue.Description</td>
                    <td>@issue.Category</td>
                    <td>@issue.ReportedDate.ToShortDateString()</td>
                    <td>@(issue.IsResolved ? "Resolved" : "Pending")</td>
                </tr>
            }
        </tbody>
    </table>
</div>